@model chuyenNganh.websiteBanGiay.ViewModels.CategoryVM

@{
    ViewData["Title"] = "Chi tiết danh mục";
    Layout = "_Product";
}

<div class="container mt-5">
    <h1 class="text-center mb-4 text-uppercase font-weight-bold">@Model.CategoryName</h1>

    <div class="row">
        <!-- Cột chứa hình ảnh danh mục -->
        <div class="col-md-6">
            <div id="product_details_slider" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="img-fluid rounded shadow-sm w-100"
                             src="@Url.Content("~/img/categories/" + Model.ImageUrl + ".jpg")"
                             alt="@Model.CategoryName">
                    </div>
                </div>
            </div>
        </div>

        <!-- Cột chứa mô tả danh mục -->
        <div class="col-md-6">
            <h4 class="mb-3 font-weight-bold">Mô tả</h4>
            <p>@Model.Description</p>
        </div>
    </div>

    <!-- Link quay lại danh sách danh mục -->
    <div class="col-12 text-center py-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-warning px-4" w-100">Quay lại trang chủ</a>
    </div>
</div>

<!-- Font Awesome để hiển thị icon -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
