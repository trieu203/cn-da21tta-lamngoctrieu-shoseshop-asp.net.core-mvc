@using System.Security.Claims
@model chuyenNganh.websiteBanGiay.ViewModels.ProductVMDT

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "_Product";
}

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" asp-controller="Home" asp-action="Index">Trang chủ</a>
                <a class="breadcrumb-item text-dark" asp-controller="Products" asp-action="Index">Sản phẩm</a>
                <span class="breadcrumb-item active">Chi tiết sản phẩm</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Shop Detail Start -->
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 mb-30">
            <div class="single_product_thumb">
                <div id="product_details_slider" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <!-- Trigger Modal on Click -->
                            @{
                                // Lấy ImageUrl từ item, đảm bảo không null
                                var imageUrl = Model.ImageUrl?.ToString() ?? "";

                                // Kiểm tra nếu thiếu phần mở rộng (".jpg") thì thêm vào
                                var imageFile = string.IsNullOrEmpty(System.IO.Path.GetExtension(imageUrl))
                                ? imageUrl + ".jpg"
                                : imageUrl;

                                // Đường dẫn đến ảnh
                                var imagePath = Url.Content("~/img/products/" + imageFile);
                            }

                            <a class="product-img" href="#" data-toggle="modal" data-target="#imageModal" title="Click để xem rỏ hơn">
                                <img class="img-fluid w-100" src="@imagePath" alt="@Model.ProductName"
                                     onerror="this.onerror=null; this.src='/img/products/default.jpg';" />
                            </a>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal for Image Zoom -->
        <div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="imageModalLabel">@Model.ProductName</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body text-center">
                        <!-- Zoomed Image -->
                        <img id="zoomedImage" class="img-fluid" src="@Url.Content("~/img/Products/" + Model.ImageUrl + ".jpg")" alt="@Model.ProductName">
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-7 h-auto mb-30">
            <div class="h-100 bg-light p-30">
                <h3>@Model.ProductName</h3>
                <div class="d-flex mb-3">
                    <div class="text-primary mr-2">
                        <small class="fas fa-star"></small>
                        <small class="fas fa-star"></small>
                        <small class="fas fa-star"></small>
                        <small class="fas fa-star-half-alt"></small>
                        <small class="far fa-star"></small>
                    </div>

                </div>
                <h3 class="font-weight-semi-bold mb-4">@Model.Price.ToString("N0") VND</h3>
                <div class="d-flex mb-3">
                    <strong class="text-dark mr-3">Sizes:</strong>
                    <form id="sizeForm">
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" class="custom-control-input" id="size-1" name="size" value="39">
                            <label class="custom-control-label" for="size-1">39</label>
                        </div>
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" class="custom-control-input" id="size-2" name="size" value="40">
                            <label class="custom-control-label" for="size-2">40</label>
                        </div>
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" class="custom-control-input" id="size-3" name="size" value="41">
                            <label class="custom-control-label" for="size-3">41</label>
                        </div>
                    </form>
                </div>

                <!-- Chọn số lượng và nút Thêm vào Giỏ hàng -->
                <form asp-action="AddToCart" asp-controller="Carts" asp-route-id="@Model.ProductId" method="post" id="addToCartForm">
                    <div class="d-flex align-items-center mb-4">
                        <div class="input-group quantity mr-3" style="width: 130px;">
                            <button type="button" class="btn btn-warning btn-minus">
                                <i class="fa fa-minus"></i>
                            </button>
                            <input type="text" class="form-control bg-secondary text-center quantity-input" name="quantity" value="1" style="max-width: 50px;" />
                            <button type="button" class="btn btn-warning btn-plus">
                                <i class="fa fa-plus"></i>
                            </button>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-shopping-cart mr-1"></i> Thêm vào Giỏ hàng
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <!--Mô ả và-->
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Mô tả sản phẩm</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Lượt đánh giá (@Model.Reviews.Count)</a>
                </div>
                <div class="tab-content">
                    <!-- Tab Mô tả sản phẩm -->
                    <div class="tab-pane fade show active" id="tab-pane-1">
                        <h4 class="mb-3">Mô tả</h4>
                        <p>@Model.Description</p>
                    </div>

                    <!-- Tab Reviews -->
                    <div class="tab-pane fade" id="tab-pane-3">
                        <div class="row">
                            <!-- Hiển thị danh sách đánh giá -->
                            <div class="col-md-6">
                                <h4 class="mb-4">@Model.Reviews.Count review(s) for "@Model.ProductName"</h4>
                                @if (Model.Reviews.Any())
                                {
                                    @foreach (var review in Model.Reviews)
                                    {
                                        <div class="media mb-4">
                                            <img src="@Url.Content("~/img/users/" + review.ImageUrl)"
                                                 alt="@review.UserName"
                                                 class="img-fluid mr-3 mt-1"
                                                 style="width: 45px; height: 45px; object-fit: cover;">


                                            <div class="media-body">
                                                <h6>@review.UserName<small> - <i>@review.ReviewDate.ToString("dd MMM yyyy")</i></small></h6>
                                                <div class="text-primary mb-2">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= review.Rating)
                                                        {
                                                            <i class="fas fa-star"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="far fa-star"></i>
                                                        }
                                                    }
                                                </div>
                                                <p>@review.Comment</p>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p>Chưa có đánh giá nào.</p>
                                }
                            </div>

                            <!-- Form để gửi đánh giá -->
                            <div class="col-md-6">
                                <h4 class="mb-4">Để lại một đánh giá và bình luận</h4>
                                <small>Địa chỉ email của bạn sẽ không được công bố. Các trường bắt buộc được đánh dấu *</small>
                                <form method="post" asp-action="AddReview" asp-route-productId="@Model.ProductId">
                                    <!-- Chọn số sao -->
                                    <div class="d-flex my-3">
                                        <p class="mb-0 mr-2">Sản phẩm đạt số sao * :</p>
                                        <div class="text-primary star-rating">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <label for="rating-@i" class="star">
                                                    <input type="radio" id="rating-@i" name="rating" value="@i" class="d-none">
                                                    <i class="far fa-star"></i>
                                                </label>
                                            }
                                        </div>
                                    </div>

                                    <!-- Bình luận -->
                                    <div class="form-group">
                                        <label for="comment">Đánh giá *</label>
                                        <textarea name="comment" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                                    </div>

                                    <!-- Tên và Email -->
                                    <div class="form-group">
                                        <label for="name">Tên của bạn *</label>
                                        <input type="text" class="form-control" id="name" value="@User.Identity.Name" readonly>
                                    </div>

                                    <!-- Nút gửi -->
                                    <div class="form-group mb-0">
                                        <button type="submit" class="btn btn-primary px-3">Để lại đánh giá của bạn</button>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>

</div>
<!-- Shop Detail End -->
@section Scripts {
    <script>
        document.getElementById("addToCartForm").addEventListener("submit", function (event) {
            // Kiểm tra xem có size nào được chọn chưa
            const sizeChecked = document.querySelector('input[name="size"]:checked');
            if (!sizeChecked) {
                // Ngăn form submit
                event.preventDefault();
                alert("Vui lòng chọn size trước khi thêm vào giỏ hàng!");
            }
        });

        // Kiểm tra số lượng khi người dùng submit form
            document.getElementById('addToCartForm').addEventListener('submit', function(event) {
                var quantity = parseInt(document.querySelector('input[name="quantity"]').value);

                if (quantity > 19) {
                    // Hiển thị thông báo nếu số lượng vượt quá 19
                    alert('Số lượng sản phẩm không được vượt quá 19.');
                    event.preventDefault();
                }
            });

                        document.addEventListener("DOMContentLoaded", function () {
                const stars = document.querySelectorAll(".star input[type='radio']");
                stars.forEach(star => {
                    star.addEventListener("change", function () {
                        const allStars = document.querySelectorAll(".star i");
                        allStars.forEach(starIcon => starIcon.className = "far fa-star"); // Đặt lại sao trống
                        const rating = this.value;
                        for (let i = 1; i <= rating; i++) {
                            document.querySelector(`#rating-${i} ~ i`).className = "fas fa-star"; // Đặt sao đầy
                        }
                    });
                });
            });


    </script>
}